<body>
    <div class="login-container">
        <h2>Login</h2>
        <form id="loginForm">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Log In</button>
        </form>
        <div id="message"></div>
    </div>

    <script>
        const loginForm = document.getElementById('loginForm');
        const usernameInput = document.getElementById('username');
        const passwordInput = document.getElementById('password');
        const messageDiv = document.getElementById('message');

        loginForm.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the default form submission

            const username = usernameInput.value;
            const password = passwordInput.value;

            // In a real application, you would send these to a server for authentication.
            // For this simple example, we'll just check against some hardcoded values.

            if (username === 'user123' && password === 'pass456') {
                messageDiv.textContent = 'Login successful!';
                messageDiv.className = ''; // Remove error class if present
            } else {
                messageDiv.textContent = 'Login failed. Invalid username or password.';
                messageDiv.className = 'error';
            }

            // Optionally clear the form fields after submission
            // usernameInput.value = '';
            // passwordInput.value = '';
        });
    </script>
</body>
